<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:background="#00B0FF"
    tools:context="com.arianasp.advanceapp.activity.CardFragmentIncome">

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp">

        <LinearLayout
            android:id="@+id/rel1"
            android:layout_width="199dp"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview Income"
                android:textColor="#FFFFFF"
                android:background="#1A237E"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <android.support.design.widget.TextInputLayout style="@style/etStyle01">

                <EditText
                    android:id="@+id/tvDescription"
                    android:hint="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/etStyle02">

                <EditText
                    android:id="@+id/tvAmount"
                    android:hint="Amount"
                    style="@style/etStyleNum"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/etStyle01">

                <EditText
                    android:id="@+id/tvDateInc"
                    android:hint="Date Income"
                    style="@style/etStyleDat"
                    />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center">

                <Button
                    android:text="ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonAddIncome" />

                <TextView
                    android:id="@+id/tvstatusinc"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:hint="Status"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
